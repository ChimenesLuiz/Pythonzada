
MDScreen:
    name: "createtaskscreen"

    MDNavigationLayout:

        MDScreenManager:
                
            MDRaisedButton:
                text: "    Voltar    "
                md_bg_color: "red"
                pos_hint: {"center_x": .3, "center_y": .20}


            MDRaisedButton:
                on_press: app.createTask()
                text: "Cadastrar"
                md_bg_color: "green"
                pos_hint: {"center_x": .7, "center_y": .20}
                
                
            MDTextField:
                id: date_task
                hint_text: "Data para conclusao"
                helper_text: "There will always be a mistake"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5, "center_y": .40}
                size_hint_x: .5
                
            MDTextField:
                id: desc_task
                hint_text: "Descricao"
                helper_text: "There will always be a mistake"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5, "center_y": .55}
                size_hint_x: .5
                
            MDTextField:
                id: name_task
                hint_text: "Nome Tarefa"
                helper_text: "There will always be a mistake"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5, "center_y": .70}
                size_hint_x: .5




