<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

Manager:
    Home:
        name: "home"
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
                    MDTopAppBar:
                        title: "Navigation Drawer"
                        elevation: 4
                        pos_hint: {"top": 1}
                        md_bg_color: "#e7e4c0"
                        specific_text_color: "#4a4939"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    MDRaisedButton:
                        on_release: root.current = "createtaskscreen"
                        text: "Cadastrar"
                        md_bg_color: "green"
                        pos_hint: {"center_x": .7, "center_y": .20}

                    MDNavigationDrawer:
                        id: nav_drawer
                        radius: (0, 16, 16, 0)

                        MDNavigationDrawerMenu:

                            MDNavigationDrawerHeader:
                                title: "Header title"
                                title_color: "#4a4939"
                                text: "Header text"
                                spacing: "4dp"
                                padding: "12dp", 0, 0, "56dp"

                            MDNavigationDrawerLabel:
                                text: "Mail"

                            DrawerClickableItem:
                                icon: "gmail"
                                right_text: "+99"
                                text_right_color: "#4a4939"
                                text: "Inbox"

                            DrawerClickableItem:
                                icon: "send"
                                text: "Outbox"

                            MDNavigationDrawerDivider:

                            MDNavigationDrawerLabel:
                                text: "Labels"

                            DrawerLabelItem:
                                icon: "information-outline"
                                text: "Label"

                            DrawerLabelItem:
                                icon: "information-outline"
                                text: "Label"

    CreateTaskScreen:
        name: "createtaskscreen"
        MDNavigationLayout:
            MDScreenManager:
                MDScreen:
        MDRaisedButton:
            on_release: root.current = "home"
            text: "[color=#FFFFFF]VOLTAR[/color]"
            pos_hint: {"center_x": .29, "center_y": .20}
            md_bg_color: "red"
            size_hint_x: .37
            elevation_normal: 0


        MDRaisedButton:
            on_press: app.POST() 
            text: "Cadastrar"
            md_bg_color: "green"
            pos_hint: {"center_x": .71, "center_y": .20}
            size_hint_x: .37
            elevation_normal: 0
            
        MDFloatLayout:

            MDRaisedButton:
                id: calendar
                text: "Open date picker"
                pos_hint: {'center_x': .815, 'center_y': .39}
                size_hint_y: .083
                on_release: app.show_date_picker()
        
        MDTextField:
            id: date_task
            mode: "rectangle"
            hint_text: "Data para conclusao"
            helper_text: "There will always be a mistake"
            helper_text_mode: "on_error"
            pos_hint: {"center_x": .4, "center_y": .40}
            size_hint_x: .6
        
            
        MDTextField:
            id: desc_task
            mode: "rectangle"
            hint_text: "Descricao"
            helper_text: "There will always be a mistake"
            helper_text_mode: "on_error"
            pos_hint: {"center_x": .5, "center_y": .55}
            size_hint_x: .8
        
            
        MDTextField:
            id: name_task
            mode: "rectangle"
            hint_text: "Nome Tarefa"
            helper_text: "TESTEEEEEEEEEEE"
            helper_text_mode: "on_error"
            pos_hint: {"center_x": .5, "center_y": .70}
            size_hint_x: .8
        
            color_mode: "custom"

