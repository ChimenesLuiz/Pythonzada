<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<ContentNavigationDrawer>
    MDList:
        OneLineListItem:
            text: "HOME"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "screen_1"

        OneLineListItem:
            text: "AJUSTES"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "screen_2"


MDScreen:

    MDTopAppBar:
        pos_hint: {"top": 1}
        elevation: 4
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager

            MDScreen:
                name: "screen_1"

                MDFloatLayout:
                    MDLabel:
                        id: task_label
                        halign: 'center'
                        markup: True
                        text: "[size=48][b]TAREFAS[/b][/size][/u]"
                        pos_hint: {'y': .45}

                    ScrollView:
                        pos_hint: {'center_y': .5, 'center_x': .5}
                        size_hint: .9, .8

                        MDList:
                            id: container


                    MDFloatingActionButton:
                        icon: 'app/resources/icons/plus.png'
                        on_release: app.show_task_dialog()
                        elevation_normal: 13
                        pos_hint: {'x': .30 , 'y': .04}
                    
                    MDFloatingActionButton:
                        icon: 'app/resources/icons/refresh.png'
                        on_release: app.refresh_tasks()
                        elevation_normal: 13
                        pos_hint: {'x': .60 , 'y': .04}

            MDScreen:
                name: "screen_2"
                MDFloatLayout:

                    
                    MDLabel:
                        halign: 'center'
                        markup: True
                        text: "[size=48][b]AJUSTES[/b][/size][/u]"
                        pos_hint: {'y': .45}
                    <GetIds>:
                        MDTextField:
                            id: "input_easter_egg"
                            pos_hint: {'x': .16 , 'y': .7}
                            size_hint_x: .5
                            hint_text: "Easter Egg"
                            helper_text: "Digite o codigo do Easter Egg, ex: LUIZLINDO"
                            helper_text_mode: "on_focus"

                    MDRaisedButton:
                        text: "TENTE"
                        on_release: app.teste()
                        pos_hint: {'x': .7 , 'y': .72}
                        size_hint_x: .1
                    MDLabel:
                        pos_hint: {'x': .159 , 'y': .15}
                        text: "Mudar tema:"
                    
                    MDRaisedButton:
                        text: "MUDAR"
                        on_release: app.switch_theme_style()
                        pos_hint: {'x': .158 , 'y': .55}
                        size_hint_x: .2


                    MDLabel:
                        pos_hint: {'x': .159 , 'y': .0}
                        text: "Tarefas:"
                    
                    MDRaisedButton:
                        text: "IMPORTAR"
                        on_release: app.choose_file_to_import()
                        pos_hint: {'x': .158 , 'y': .40}
                        size_hint_x: .2

                    MDRaisedButton:
                        text: "EXPORTAR"
                        on_release: app.export_data_tasks()
                        pos_hint: {'x': .420 , 'y': .40}
                        size_hint_x: .2


        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer





<DialogContent>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "130dp"

    GridLayout:
        rows: 1

        MDTextField:
            id: task_text
            hint_text: "Nome"
            pos_hint: {"center_y": .4}
            max_text_length: 50
            on_text_validate: (app.add_task(task_text, date_text.text), app.close_dialog())

        MDIconButton:
            icon: 'calendar'
            on_release: root.show_date_picker()
            padding: '10dp'

    MDLabel:
        spacing: '10dp'
        id: date_text

    BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "SALVAR"
            on_release: (app.add_task(task_text, date_text.text), app.close_dialog())
        MDFlatButton:
            text: 'CANCELAR'
            on_release: app.close_dialog()

<ListItemWithCheckbox>:
    id: the_list_item
    markup: True

    LeftCheckbox:
        id: check
        on_release: 
            root.check_uncheck(check, the_list_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        on_release:
            root.delete_task(the_list_item)

